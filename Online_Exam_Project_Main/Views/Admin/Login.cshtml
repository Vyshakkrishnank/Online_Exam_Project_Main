@model Online_Exam_Project_Main.Models.Admin_tbl

@{
    ViewBag.Title = "Login";
    Layout = null; // Remove the layout for a clean page.
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Examination</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <style>
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        .login-container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            max-width: 400px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .login-header h2 {
                color: #333;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .login-button {
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .login-button:hover {
                background-color: #0056b3;
            }

        .back-link {
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>Login</h2>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.admin_name, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.admin_name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.admin_name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.admin_password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.admin_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.admin_password)
            </div>
        </div>


        <div class="form-group">
            <input type="submit" value="Login" class="btn login-button" />
        </div>
    </div>
        }

        <div class="back-link">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
