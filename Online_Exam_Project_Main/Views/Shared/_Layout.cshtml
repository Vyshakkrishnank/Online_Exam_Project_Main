<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Examination</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <style>
        /* General Styles */
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .navbar {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between; /* Add space between elements */
            align-items: center; /* Center vertically */
        }

            .navbar a {
                color: white;
                text-decoration: none;
                font-weight: bold;
            }

        /* ... (Your existing styles) ... */

        /* Logout Button Styles */
        .logout-button {
            background-color:navy;
            color: white;
            border: 2px solid #D3D3D3;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

            .logout-button:hover {
                background-color: black;
                color: lightgray;
            }
        .sidebar-item {
            color: rebeccapurple;
        }
        .navbar-header .navbar-nav > li > a {
            
            color: black;
            text-align:center;
        }

            .navbar-header .navbar-nav > li > a:hover {
                background-color: white;
            }
            .navbar-nav{
                color:black;
            }

        .navbar-brand {
            color: white;
        }

        /* Sidebar Styles */
        .sidebar {
            background-color: #007BFF;
            width: 250px;
            position: fixed;
            height: 100%;
            padding: 20px;
            color: black;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
            }

                .sidebar a:hover {
                    text-decoration: underline;
                    
                }

        /* Content Container Styles */
        .content-container {
            margin-left: 250px;
            padding: 20px;
            background-color:blueviolet;
        }
        /* Footer Styles */
        footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
            margin-top: auto;
        }
    </style>

</head>
<body>
    <div class="container-fluid">
        @if (Session["admin_name"] != null)
        {
                <div class="navbar">
                    <a href="@Url.Action("AdminProfile", "Admin")">Home</a>
                    <button class="logout-button">@Html.ActionLink("Logout", "Logout", "Admin")</button>
                </div>
                <div class="navbar-header" style=" width: 150px; position: fixed; border-radius: 0%; height: 80%; background-color:lightgray;">
                <a class="navbar-brand" href="#">ADMIN SITE</a>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="col-md-3" style="margin-left:20px;">ADMIN <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Admin")</li>
                            <li> @Html.ActionLink("Create", "Create", "Admin")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="col-md-3" style="margin-left:20px;">CANDIDATE <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Candidate")</li>
                            <li> @Html.ActionLink("Create", "Create", "Candidate")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="col-md-3" style="margin-left:20px;">RESULT <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Result")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="col-md-3" style="margin-left:20px;">SUBJECT <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Subject")</li>
                            <li> @Html.ActionLink("Create", "Create", "Subject")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="col-md-3" style="margin-left:20px;">EXAM <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Exam")</li>
                            <li> @Html.ActionLink("Create", "Create", "Exam")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="col-md-3" style="margin-left:20px;">QUESTION <span class="caret"></span></a>
                        <ul>
                            <li>@Html.ActionLink("Index", "Index", "Question")</li>
                            <li> @Html.ActionLink("Create", "Create", "Question")</li>

                        </ul>
                    </li>



                </ul>

            </div>
        }
    </div>
    @if (Session["admin_name"] != null )
    {


        <div class="container body-content" style="margin-left :150px">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Online Examination System</p>
            </footer>
        </div>


    }
        
   else {
        <div class="container body-content" style="">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Examination System</p>
        </footer>
    </div>
}
   
    

    @RenderSection("scripts", required: false)
</body>

</html>
