<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Examination</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    <style>
        /* General Styles */
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        /* Navigation Bar Styles */
        .navbar {
            background-color: #333;
            border: none;
            border-radius: 0;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                background-color: #555;
            }

        .navbar-brand {
            color: white;
        }

        /* Sidebar Styles */
        .sidebar {
            background-color: #333;
            width: 250px;
            position: fixed;
            height: 100%;
            padding: 20px;
            color: white;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
            }

                .sidebar a:hover {
                    text-decoration: underline;
                }

        /* Content Container Styles */
        .content-container {
            margin-left: 250px;
            padding: 20px;
            background-color: white;
        }

        /* Footer Styles */
        footer {
            text-align: center;
            padding: 10px;
            background-color: #333;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>-->
                @*@Html.ActionLink("Online Examination", "Index", "Home", null, new { @class = "navbar-brand" })*@
            <!--</div>-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["candidate_name"] != null)
                 {                   

                    <li style="margin-left: 800px;color: white; margin-top: 15px">Hello @Session["candidate_name"] </li>

                    <li>@Html.ActionLink("Logout", "Logout", "Candidate")</li>
                    }
                    else
                    {
                            <li>@Html.ActionLink("Registration", "Create", "Candidate")</li>
                            <li>@Html.ActionLink("Login", "Login", "Candidate")</li>
                 
                    }
                    
                    
                    
                    @if (Session["admin_name"] != null)
                    {
                        <li style="margin-left: 600px;color: white; margin-top: 15px">Hello @Session["admin_name"] </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Admin")</li>
                    }
                    
                    
                </ul>
            </div>
        </div>
    </div>
    
    @if (Session["admin_name"] != null)
    {
        <button>@Html.ActionLink("Logout", "Logout", "Admin")</button>
        <div class="navbar navbar-inverse" style=" width: 140px; position: fixed; border-radius: 0; height: 100%;">
            <a class="navbar-brand" href="#">ADMIN SITE</a>
            <ul class="nav navbar-nav">
                <a href="#" class="col-md-3">ADMIN <span class="caret"></span></a>
                <ul>
                    <li>@Html.ActionLink("Index", "Index", "Admin")</li>
                    <li> @Html.ActionLink("Create", "Create", "Admin")</li>
                </ul>
                <li class="dropdown">
                    <a href="#" class="col-md-3">CANDIDATE <span class="caret"></span></a>
                    <ul>
                        <li>@Html.ActionLink("Index", "Index", "Candidate")</li>
                        <li> @Html.ActionLink("Create", "Create", "Candidate")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="col-md-3">RESULT <span class="caret"></span></a>
                    <ul>
                        <li>@Html.ActionLink("Index", "Index", "Result")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="col-md-3">SUBJECT <span class="caret"></span></a>
                    <ul>
                        <li>@Html.ActionLink("Index", "Index", "Subject")</li>
                        <li> @Html.ActionLink("Create", "Create", "Subject")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="col-md-3">EXAM <span class="caret"></span></a>
                    <ul>
                        <li>@Html.ActionLink("Index", "Index", "Exam")</li>
                        <li> @Html.ActionLink("Create", "Create", "Exam")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="col-md-3">QUESTION <span class="caret"></span></a>
                    <ul>
                        <li>@Html.ActionLink("Index", "Index", "Question")</li>
                        <li> @Html.ActionLink("Create", "Create", "Question")</li>

                    </ul>
                </li>



            @*</ul>*@
        </div>
    } 
    @if (Session["admin_name"] != null )
    {


        <div class="container body-content" style="margin-left :150px">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Online Examination System</p>
            </footer>
        </div>


    }
        
   else {
        <div class="container body-content" style="">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Examination System</p>
        </footer>
    </div>
}
   
    

    @RenderSection("scripts", required: false)
</body>

</html>
