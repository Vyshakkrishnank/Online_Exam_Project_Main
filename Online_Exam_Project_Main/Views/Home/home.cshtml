@{
    ViewBag.Title = "Home";
}

<style>
    /* Container Styles */
    .container {
        text-align: center;
        margin-top: 50px;
    }

    /* Header Styles */
    h2 {
        font-size: 32px;
        color: #007BFF;
        margin-bottom: 20px;
    }

    /* Link Styles */
    .action-link {
        display: block;
        background-color: #007BFF;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        margin: 10px 0;
        border-radius: 5px;
        font-size: 18px;
        transition: background-color 0.3s ease;
    }

        .action-link:hover {
            background-color: #0056b3;
        }
</style>

<div class="container">
    <h2>Welcome to the Home Page</h2>
    <div>
        @Html.ActionLink("Register as a Candidate", "Create", "Candidate", null, new { @class = "action-link" })
    </div>
    <div>
        @Html.ActionLink("Admin Login", "Login", "Admin", null, new { @class = "action-link" })
    </div>
    <div>
        @Html.ActionLink("Student Login", "Login", "Candidate", null, new { @class = "action-link" })
    </div>
</div>
